<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
    card_view:cardCornerRadius="4dp"
    android:orientation="horizontal"
    android:padding="@dimen/list_item_extra_padding"
    android:background="@drawable/touch_selector"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--  android:background="@android:drawable/dialog_holo_light_frame"-->

            <ImageView
                android:id="@+id/list_item_lesson_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/air_plan"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:adjustViewBounds="true" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingTop ="@dimen/list_item_extra_padding"
            android:paddingRight="@dimen/list_item_extra_padding"
            android:paddingLeft="@dimen/list_item_extra_padding">

            <TextView
                android:id="@+id/list_item_lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/list_item_extra_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:text="@string/detail_desc" />

            <TextView
                android:id="@+id/list_item_real_Application_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/list_item_extra_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/secondary_text"
                tools:text="@string/detail_location" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>