<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/input_field_height_friend"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/iv_friend_image"
        android:layout_width="@dimen/profile_width"
        android:layout_height="@dimen/profile_width"
        android:contentDescription="@string/a11y_profileImage"
        android:scaleType="fitXY" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="@dimen/text_padding"
        android:paddingStart="@dimen/text_padding"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_friend_email"
            style="@style/ListItemText"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/tv_friend_name"
            style="@style/ListItemTextSmall"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />
    </LinearLayout>


    <!--<ImageButton-->
        <!--android:id="@+id/button_toggle_share"-->
