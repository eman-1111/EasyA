<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_hight"
    android:layout_margin="@dimen/activity_less_margin"
    android:background="@drawable/shadow"
    android:elevation="@dimen/card_elevation"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    card_view:cardCornerRadius="@dimen/card_elevation">


    <TextView
        android:id="@+id/course_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/et_padding_add"
        android:fontFamily="sans-serif-light"
        android:gravity="start"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/et_padding_add"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/teacher_photo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"
            android:contentDescription="@string/a11y_teacher_image"
            android:maxHeight="@dimen/teacher_icon"
            android:maxWidth="@dimen/teacher_icon"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <TextView
        android:id="@+id/teacher_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/et_padding_add"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
</android.support.v7.widget.CardView>